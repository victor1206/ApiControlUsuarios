@model SysSeguridad.EN.Usuario

@{
    ViewData["Title"] = "CambiarPassword";
}

<h1>Cambiar Password</h1>

<hr />
<form asp-action="CambiarPassword">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" class="form-control" />
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Login" class="control-label"></label>
                <input asp-for="Login" class="form-control" disabled />
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label class="control-label">Password Anterior</label>
                <input type="password" name="pPasswordAnt" class="form-control" required />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label class="control-label">Nuevo Password</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="ConfirmPassword_Aux" class="control-label"></label>
                <input asp-for="ConfirmPassword_Aux" class="form-control" />
                <span asp-validation-for="ConfirmPassword_Aux" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-dark">Cancelar</a>
            </div>
            <span class="text-danger">@ViewBag.Error</span>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(function(){
                $("form input[name]").trigger("blur");
            });
    </script>
}
